<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/complete_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33000000">

    <ImageView
        android:id="@+id/stop_fullscreen"
        android:layout_width="@dimen/video_player_controller_height"
        android:layout_height="@dimen/video_player_controller_height"
        android:padding="@dimen/video_player_controller_icon_padding"
        android:src="@drawable/video_player_ic_action_arrow_back"
        android:visibility="gone"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_replay"
            android:layout_width="@dimen/video_player_play_btn_size"
            android:layout_height="@dimen/video_player_play_btn_size"
            android:layout_gravity="center"
            android:background="@drawable/video_player_shape_play_bg"
            android:padding="@dimen/video_player_controller_icon_padding"
            android:src="@drawable/video_player_ic_action_replay" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/video_player_controller_icon_padding"
            android:text="@string/video_player_replay"
            android:textColor="@android:color/white" />

    </LinearLayout>
</FrameLayout>